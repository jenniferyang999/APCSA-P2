import static java.lang.System.*;

public class RomanNumeral
{
	private Integer number, sum = 0;
	private String roman, outputnum;
	private char thing;

	private final static int[] NUMBERS= {900,1000,400,500,90,100,
													40,50,9,10,4,5,1};
	private final static String[] LETTERS = {"CM","M","CD","D","XC","C",
												  "XL","L","IX","X","IV","V","I"};
	

	public RomanNumeral(String str)
	{
		
		roman = str;		
		
		
		
		
		
		
		
