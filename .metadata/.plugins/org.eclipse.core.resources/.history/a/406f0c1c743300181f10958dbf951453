import java.util.Arrays;
import java.util.Scanner;
import java.util.Collections;
import static java.lang.System.*;

public class FancyWords
{
	private String[] wordRay;
	private String[] tempRay;
	private String word;
	private int count = 0;

	public FancyWords(String sentence)
	{
		word = sentence;
	}

	public void setWords(String sentence)
	{
		word = sentence;
		Scanner keyboard = new Scanner(sentence);
		wordRay = new String[count];
		for (int i = 0; i < word.length(); i++)
		{
			wordRay[i] = keyboard.next();
			tempRay = new String[count + 1];
			for (int j = 0; j < tempRay.length; j++)
			{
				tempRay[j] = wordRay[j];
			}
			//out.println(wordRay[i]);
		}
	}

	public String toString()
	{
		this.setWords(word);
		String output="";
		int max = Integer.MIN_VALUE;
		for (int i = wordRay.length - 1; i >= 0; i--)
		{
			output = output + wordRay[i] + "\n";
		}
		





		return output+"\n\n";
	}
}