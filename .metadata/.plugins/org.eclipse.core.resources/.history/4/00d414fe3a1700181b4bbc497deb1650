import java.util.Scanner;
import static java.lang.System.*;

public class GuessingGame
{
	private int upperBound;
	private double rand, guess = 0, count = 0.0;

	public GuessingGame(int stop)
	{
		upperBound = stop;

	}

	public void playGame()
	{
		Scanner keyboard = new Scanner(System.in);
		rand = Math.random();
		out.print("Guessing Game - How many numbers? ");
		upperBound = keyboard.nextInt();
		while (guess != rand) {
			out.print("Enter a number between 1 and " + upperBound + " ");
			if (keyboard.nextInt() != rand) {
				count = count + 1;
			}
			else {
				guess = rand;
			}
		}

	}

	public String toString()
	{
		String output="It took " + count + "guesses to guess " + rand + ". \nYou guessed wrong " + count/(count +1);
		return output;
	}
}