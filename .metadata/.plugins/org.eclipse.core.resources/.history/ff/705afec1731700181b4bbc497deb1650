import java.util.Scanner;
import static java.lang.System.*;

public class GuessingGame
{
	private int upperBound;
	private double rand, guess = 0, count = 1;

	public GuessingGame(int stop)
	{
		upperBound = stop;

	}

	public void playGame()
	{
		Scanner keyboard = new Scanner(System.in);
		rand = (int) ((Math.random() * upperBound) + 1);
		out.print("Enter a number between 1 and " + upperBound + " ");
		guess = keyboard.nextInt();
		
		if (guess > upperBound || guess < 1)
		{
			out.println("Number out of range!");	
		}
		
		do {
			out.print("Enter a number between 1 and " + upperBound + " ");
			guess = keyboard.nextInt();
			if (guess > upperBound || guess < 1) {
				out.println("Number out of range!");
			} 
			else {
				if (guess != rand) {
					count = count + 1;
				}
			}
		} while (guess != rand);
			
		
	}	

	public String toString()
	{
		String output="\nIt took " + count + " guesses to guess " + rand + ". \nYou guessed wrong " + String.format("%.2f", count/(count +1) * 100) + " percent of the time.\n";
		return output;
	}
}